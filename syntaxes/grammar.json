{
  "scopeName": "inline.tagged-template-sql",
  "injectionSelector": "L:source -comment -string",
  "patterns": [
    {
      "begin": "(\\bsql\\b)\\s*(?=\\()",
      "beginCaptures": {
        "1": { "name": "entity.name.function.ts" }
      },
      "end": "(?<=`)",
      "patterns": [
        {
          "begin": "\\(",
          "beginCaptures": {
            "0": { "name": "meta.brace.round.ts" }
          },
          "end": "\\)",
          "endCaptures": {
            "0": { "name": "meta.brace.round.ts" }
          },
          "patterns": [{ "include": "source.ts" }]
        },
        {
          "contentName": "meta.embedded.block.sql",
          "begin": "(?<=\\))\\s*(`)",
          "beginCaptures": {
            "1": { "name": "punctuation.definition.string.template.begin.js" }
          },
          "end": "`",
          "endCaptures": {
            "0": { "name": "punctuation.definition.string.template.end.js" }
          },
          "patterns": [
            { "include": "source.ts#template-substitution-element" },
            { "include": "source.sql" },
            { "include": "source.plpgsql.postgres" },
            { "match": "." }
          ]
        }
      ]
    }
  ]
}
