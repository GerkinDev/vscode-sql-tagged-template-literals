{
  "scopeName": "inline.tagged-template-sql",
  "injectionSelector": "L:source -comment -string",
  "patterns": [
    {
      "name": "string.js.tagged-template.sql",
      "contentName": "meta.embedded.block.sql",
      "begin": "(\\bsql\\b)\\s*(\\(.*?\\))?\\s*(`)",
      "beginCaptures": {
        "1": { "name": "entity.name.function.ts" },
        "3": { "name": "punctuation.definition.string.template.begin.js" }
      },
      "end": "(`)",
      "endCaptures": {
        "1": { "name": "punctuation.definition.string.template.end.js" }
      },
      "patterns": [
        { "include": "source.ts#template-substitution-element" },
        { "include": "source.sql" },
        { "include": "source.plpgsql.postgres" },
        { "match": "." }
      ]
    }
  ]
}
